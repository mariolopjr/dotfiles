[cd]
    command = "fish"
{{- if eq .chezmoi.os "darwin" }}
[[textconv]]
    pattern = "**/*.plist"
    command = "plutil"
    args = ["-convert", "xml1", "-o", "-", "-"]
{{- end }}

[diff]
    command = "delta"
    pager = "delta"

[data]
    username = "mario"
    windowsHosts = { winterfell = true }
    serverHosts = { pyke = true }
    devboxHostname = "devbox"
    macHosts = { targaryen = true }
{{- if or (eq .chezmoi.os "windows") (eq .chezmoi.os "darwin") }}
    is_wsl = false
{{- else }}
    is_wsl = {{ (.chezmoi.kernel.osrelease | lower | contains "microsoft") }}
{{- end }}