// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
//
// settings from https://github.com/jellydn/zed-101-setup
{
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4"
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "commit_message_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    },
    "thread_summary_model": {
      "provider": "copilot_chat",
      "model": "gpt-4.1"
    }
  },
  "auto_install_extensions": {
    "beancount": true,
    "catppuccin": true,
    "catppuccin-icons": true,
    "fish": true,
    "gdscript": true,
    "html": true,
    "lua": true,
    "toml": true
  },
  "git_panel": {
    "dock": "right"
  },
  "features": {},
  "icon_theme": "Catppuccin Macchiato",
  "theme": "Catppuccin Macchiato",
  "ui_font_size": 15,
  "buffer_font_size": 16,
  // Finder model width
  "file_finder": {
    "modal_width": "medium"
  },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "buffer_font_weight": 300,
  "buffer_font_features": {
    "calt": true
  },
  // vim mode settings
  "vim_mode": true,
  "vim": {
    "enable_vim_sneak": true
  },
  "relative_line_numbers": true,
  "cursor_blink": false,
  "soft_wrap": "editor_width",
  "tab_bar": {
    "show": false
  },
  "scrollbar": {
    "show": "never"
  },
  // Only show error on tab
  "tabs": {
    "show_diagnostics": "errors"
  },
  // Indentation, rainbow indentation
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  // enable minimap
  "minimap": {
    "enabled": true,
    "display_in": "active_editor",
    "show_scrollbar": false
  },
  // NOTE: Zen mode, refer https://github.com/zed-industries/zed/issues/4382 when it's resolved
  "centered_layout": {
    "left_padding": 0.15,
    "right_padding": 0.15
  },
  // Inlay hints preconfigured by Zed: Go, Rust, Typescript and Svelte
  "inlay_hints": {
    "enabled": true
  },
  // disable ai inline completions
  "show_edit_predictions": false,
  // Use zed commit editor
  "terminal": {
    "font_family": "JetBrainsMono Nerd Font",
    "env": {
      "EDITOR": "zed --wait"
    },
    "shell": {
      "with_arguments": {
        "program": "/opt/homebrew/bin/fish",
        "args": ["-l"]
      }
    }
  },
  // File syntax highlighting
  "file_types": {
    "Beancount": ["*.bc"],
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"],
    "TOML": ["*.toml.tmpl"]
  },
  // File scan exclusions, hide on the file explorer and search
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    // above is default from Zed
    "**/out",
    "**/dist",
    "**/.husky",
    "**/.turbo",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.storybook",
    "**/.tap",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],
  "file_scan_inclusions": [".env", "docker-compose.*.yml", "*.md"],
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "chat_panel": {
    "button": "never"
  },
  "collaboration_panel": {
    "button": false
  },
  "project_panel": {
    "button": false,
    "git_status": true
  },
  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": false
  },
  "vertical_scroll_margin": 0,
  // lsp settings
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "allFeatures": true,
          "loadOutDirsFromCheck": true,
          "buildScripts": {
            "enable": true
          }
        },
        "rustfmt": {
          "extraArgs": ["--unstable-features"]
        },
        "procMacro": {
          "enable": true,
          "ignored": {
            "async-trait": ["async_trait"],
            "napi-derive": ["napi"],
            "async-recursion": ["async_recursion"]
          }
        },
        // clippy lints
        "checkOnSave": true,
        // diagnostics
        "diagnostics": {
          "disabled": ["unresolved-macro-call"],
          "experimental": {
            "enable": true
          }
        },
        "inlayHints": {
          "maxLength": null,
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "closureReturnTypeHints": {
            "enable": "always"
          }
        }
      }
    }
  }
}
