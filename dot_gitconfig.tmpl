[core]
    pager = delta
    excludesfile = ~/.gitignore_global
[user]
	signingkey = ~/.ssh/id_ed25519.pub
	email = mariolopjr@users.noreply.github.com
	name = Mario Lopez
[gpg]
	format = ssh
[gpg "ssh"]
	allowedSignersFile = ~/.ssh/allowed_signers
[commit]
	gpgsign = true
[pull]
	rebase = true
[tag]
	gpgsign = true
[init]
    defaultBranch = main
[push]
    autoSetupRemote = true
