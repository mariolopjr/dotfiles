{{ if and (eq .chezmoi.os "linux") (.is_wsl) (eq .chezmoi.osRelease.id "ubuntu") -}}
#!/bin/bash
set -e

# Add 1Password Repo
if !zypper lr | grep 1password 2>&1 > /dev/null; then
    sudo rpm --import https://downloads.1password.com/linux/keys/1password.asc
    sudo zypper ar https://downloads.1password.com/linux/rpm/stable/x86_64 1password
fi

# Install packages
sudo zypper install -y 1password neovim zsh
{{- end }}
