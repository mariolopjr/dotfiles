brew "bat"
brew "bottom"
brew "ctop"
brew "curl"
brew "direnv"
brew "exa"
brew "fd"
brew "fzf"
brew "gh"
brew "git"
brew "git-lfs"
brew "git-delta"
brew "macchina"
brew "ncdu"
brew "neovim"
brew "starship"
brew "thefuck"
